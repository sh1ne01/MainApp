<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CheatClient</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&family=Roboto&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom black & green styles -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #000000;
            color: #00ff88;
            min-height: 100vh;
        }

        .navbar, .footer {
            background-color: #111111 !important;
        }

        .nav-link {
            color: #00ff88 !important;
            font-weight: bold;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #00ff00 !important;
                text-shadow: 0 0 5px #00ff00;
            }

        .card {
            background-color: #111111;
            border: 1px solid #00ff00;
            border-radius: 12px;
            box-shadow: 0 0 15px #00ff0030;
        }

        .btn-primary {
            background-color: #00ff00;
            border-color: #00ff00;
            color: #000;
            font-weight: bold;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #00cc00;
                border-color: #00cc00;
                color: #fff;
                box-shadow: 0 0 10px #00ff00;
            }

        input.form-control {
            background-color: #000000;
            border: 1px solid #00ff00;
            color: #00ff88;
        }

            input.form-control:focus {
                background-color: #111111;
                color: #00ff00;
                border-color: #00ff00;
                box-shadow: 0 0 5px #00ff00;
            }

        footer {
            color: #00ff88;
        }

        a {
            color: #00ff88;
            text-decoration: none;
        }

            a:hover {
                color: #00ff00;
                text-shadow: 0 0 5px #00ff00;
            }
    </style>
</head>
<body>
    <!-- Navbar -->

    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container">
            <a class="navbar-brand text-success" asp-controller="Dashboard" asp-action="Index">CheatClient</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @await Component.InvokeAsync("UserAvatar")
                        </li>
                    }


                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    }

                    @if (User.IsInRole("Premium") | User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Premium" asp-action="Index">Premium</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Profile" asp-action="Index">
                                Profile
                            </a>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-center py-3">
        &copy; 2026 CheatClient
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
