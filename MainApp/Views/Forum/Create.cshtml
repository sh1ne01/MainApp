<h2>Create Post</h2>

<form method="post">
    <div class="mb-3">
        <input name="title"
               class="form-control"
               placeholder="Title" />
    </div>

    <div class="mb-3">
        <textarea name="content"
                  class="form-control"
                  placeholder="Message"></textarea>
    </div>

    <button class="btn btn-success">
        Publish
    </button>
</form>
